{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "simple",
  "include-v-in-tag": true,
  "packages": {
    ".": {
      "package-name": "wizard",
      "bump-minor-pre-major": true,
      "extra-files": [
        {
          "type": "plain-text",
          "path": "`build.sbt",
          "search": "ThisBuild / version := \"[\\d\\.]+\"",
          "replace": "ThisBuild / version := \"${version}\""
        }
      ]
    }
  }
}
